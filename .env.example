#key config : Share for number of people that can have a key, Threshold for how many key to decrypt
SHAMIR_TOTAL_SHARES=3
SHAMIR_THRESHOLD=3

# Disk Image configuration
DISK_IMAGE_DIR=/app/disk_images
KEY_FILE=/app/keys/master.key
KEY_DIR=/app/keys
TEST_FILE=/app/test_hello.encrypted

# Retention policy (in days) - 0 means no cleanup
DAY_RETENTION=7

# OVH S3 Object Storage configuration
S3_ENABLED=false
S3_ENDPOINT=https://s3.gra.io.cloud.ovh.net
S3_REGION=gra
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=your-bucket-name
# Optional: specify a prefix for all uploads (e.g., "backups/")
S3_BUCKET_PREFIX=backups

# System paths and filesystem settings (for cross-platform compatibility)
TEMP_MOUNT_POINT=/tmp/disk_mount
TEMP_BOOT_MOUNT=/tmp/boot_mount
TEMP_ISO_DIR=/tmp/iso_content
TEMP_ISO_FILE=/tmp/temp.iso
INFO_FILE_NAME=last_snapshot_info.txt
SNAPSHOT_INFO_DIR=snapshot_info
DISK_IMAGE_INFO_FILE=disk_image_info.txt

# System tools paths (modify for different OS distributions)
MKFS_EXT4_PATH=/sbin/mkfs.ext4
GENISOIMAGE_PATH=genisoimage
ISOLINUX_LIB_PATH=/usr/lib/ISOLINUX
SYSLINUX_LIB_PATH=/usr/lib/syslinux/modules/bios

# Filesystem exclusions for backup (directories to skip during backup)
EXCLUDE_PROC=/proc/*
EXCLUDE_SYS=/sys/*
EXCLUDE_DEV=/dev/*
EXCLUDE_TMP=/tmp/*
EXCLUDE_VAR_TMP=/var/tmp/*
EXCLUDE_RUN=/run/*
EXCLUDE_MNT=/mnt/*
EXCLUDE_MEDIA=/media/*
EXCLUDE_LOST_FOUND=/lost+found